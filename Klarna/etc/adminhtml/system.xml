<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="klarna_section">
                <group id="klarna">
                    <group id="api" translate="label" sortOrder="20" showInDefault="1"
                           showInWebsite="1" showInStore="0">
                        <attribute type="expanded">1</attribute>
                        <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
                        <field id="inactiveimg" translate="label" sortOrder="80" type="select" showInDefault="1" showInWebsite="1"
                               showInStore="1">
                            <label>Disable Image and Product URL</label>
                            <config_path>klarna/api/inactiveimg</config_path>
                            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                            <comment>Note: This will remove the image and product url from line item.</comment>
                        </field>
                    </group>                    
                </group>
            </group>
        </section>
    </system>
</config>
